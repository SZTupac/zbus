local config = require'zbus.json'
local subscriber = require'zbus.member'.new(config)

local counter_simple_start
local counter_simple


subscriber:listen_add(
   '^counter_.+',
   function(topic,more,...)
      local content = {...}
      if topic == 'counter_simple' then
         assert(#content==2)
         assert(content[1]==(content[2]-1))
         if counter_simple_start then
            as
         else
            counter_simple_start = content[1]
            counter_simple = content[1]
         end
      end
      return ...
   end)

service:loop()
